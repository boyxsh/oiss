<!--inclue header partial-->
<%= render :partial => "home/header" %>

<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.name %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

<a href="<%=picture.attachment.url(false,false)%>" id="imgFiche" class="nyroModal" title="UCLA" rel="gal"><%=picture.name%></a>
<% end %>
</table>

<br />
<div class="grid_12">
<%= link_to 'New Picture', new_picture_path %>
</div>
